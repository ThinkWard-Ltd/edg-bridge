{
  "name": "edg-bridge",
  "version": "1.0.0",
  "description": "Chainbridge contracts, relayer and scripts all in one for Edgeware.",
  "main": "index.js",
  "author": "Saad Ahmed Siddiqui",
  "license": "MIT",
  "scripts": {
    "setup-relayer": "node index.js setupRelayer && ./scripts/setupKeyStore.sh",
    "start-relayer": "./scripts/buildRelayer.sh && ./scripts/startRelayer.sh",
    "install-service": "sudo ./scripts/installService.sh",
    "add-relayer": "node index.js admin addRelayer",
    "deploy-bridge": "node index.js deployBridge",
    "add-token": "node index.js admin addToken"
  },
  "dependencies": {
    "@openzeppelin/contracts": "3.0.0",
    "commander": "^7.2.0",
    "dotenv": "^8.2.0",
    "ethers": "4.0.46",
    "inquirer": "^8.0.0",
    "prompt": "^1.1.0",
    "solc": "^0.6.12"
  }
}
